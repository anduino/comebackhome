<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.graduation.graduationproject.WindowActivity"
    android:background="@drawable/bg_green_notexture"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#1F2035">
        <ImageButton
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@drawable/btn_back_shadow"
            android:layout_gravity="center_vertical"
            android:onClick="windowBtnClick"
            android:id="@+id/backBtn"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Window"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#1F2035"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="false">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#1F2035"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:id="@+id/topAirconBtn"
            android:onClick="topButtonClick"
            android:text="Air Conditioner"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_selected"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:id="@+id/topWindowBtn"
            android:onClick="topButtonClick"
            android:text="Window"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#1F2035"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:id="@+id/topLampBtn"
            android:onClick="topButtonClick"
            android:text="Lamp"/>
    </LinearLayout>

    <!-- title start -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:textSize="35sp"
        android:textColor="#1F2035"
        android:text="Window"/>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/img_line"/>
    <!-- title end -->
    <!--main-->
    <TextView
        android:layout_width="214dp"
        android:layout_height="60dp"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:onClick="windowBtnClick"
        android:clickable="true"
        android:id="@+id/window_status"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/tempDate"
        android:layout_gravity="center"
        android:text=""/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_green_notexture"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#1F2035">
        <ImageButton
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@drawable/btn_back_shadow"
            android:layout_gravity="center_vertical"
            android:onClick="airconBtnClick"
            android:id="@+id/backBtn"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Air Conditioner"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#1F2035"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="false">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_selected"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:id="@+id/topAirconBtn"
            android:onClick="topBtnClicK_air"
            android:text="Air Conditioner"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#1F2035"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:id="@+id/topWindowBtn"
            android:onClick="topBtnClicK_air"
            android:text="Window"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#1F2035"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:id="@+id/topLampBtn"
            android:onClick="topBtnClicK_air"
            android:text="Lamp"/>
    </LinearLayout>

    <!--top menu end-->
    <!--main start-->
    <!--title start-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:textSize="35sp"
        android:textColor="#1F2035"
        android:text="Air Conditioner"/>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/img_line"/>
    <!--title end-->
    <!--container start-->
    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_2_temp"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="#1F2035"
                android:gravity="center"
                android:textSize="15sp"
                android:id="@+id/temp"
                android:text="27.3 â„ƒ"/>
        </LinearLayout>

        <TextView
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:padding="20dp"
            android:layout_gravity="center_vertical"
            android:onClick="airconBtnClick"
            android:clickable="true"
            android:id="@+id/aircon_status"/>
    </LinearLayout>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/ontime"
        android:layout_gravity="center"
        android:text=""/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/tempDate"
        android:layout_gravity="center"
        android:text=""/>


</LinearLayout>
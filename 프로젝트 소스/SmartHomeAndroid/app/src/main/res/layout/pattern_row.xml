<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/border"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/mapBtn"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:background="@drawable/icon_air"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mapBtn"
            android:focusable="false">
            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/controlText"
                android:text="Air Conditioner"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:focusable="false"/>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:focusable="false">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_time"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/timeText"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="PM 7:30"
                    android:textColor="#ffffff"
                    android:focusable="false"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_temp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/tempText"
                    android:layout_marginLeft="15dp"
                    android:text="27.3"
                    android:textColor="#ffffff"
                    android:focusable="false"/>
            </LinearLayout>
        </LinearLayout>

    <Switch
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:id="@+id/pbutton"
        android:focusable="false"/>
    </RelativeLayout>

</LinearLayout>
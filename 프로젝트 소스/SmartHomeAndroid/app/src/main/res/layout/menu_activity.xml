<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/bg_blue_texture">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="115dp"
        android:background="@drawable/main_logo_2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:id="@+id/menu_aircon"
            android:clickable="true"
            android:onClick="menuClick">
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/aircon_view"
                android:background="@drawable/icon_air_off"/>
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="AirConditioner"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:id="@+id/menu_window"
            android:clickable="true"
            android:onClick="menuClick">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/window_view"
                android:background="@drawable/icon_window_closed"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Window"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:id="@+id/menu_lamp"
            android:clickable="true"
            android:onClick="menuClick">
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/lamp_view"
                android:background="@drawable/icon_lamp_off"/>
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Lamp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:id="@+id/menu_pattern"
            android:clickable="true"
            android:onClick="menuClick">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/icon_pattern"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Pattern"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:id="@+id/menu_setting"
            android:clickable="true"
            android:onClick="menuClick">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/icon_set"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Setting"/>
        </LinearLayout>
    </LinearLayout>


